@model TesteWebApi.ViewModels.Login

@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken() // previne o ataque CSRF
    @Html.ValidationSummary(true)

    <div class="form-horizontal">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="panel-heading">
                <h3 class="panel-title">Login</h3>
            </div>
            <div class="panel-body">
                <form role="form">
                    <fieldset>
                        <div class="form-group">
                            @Html.TextBoxFor(a => a.usuario, new { @class = "form-control", @placeholder = "Usuário", @style = "width:400px;", @autofocus = "" })
                         </div>
                        <div class="form-group">
                             @Html.PasswordFor(a => a.senha, new { @class = "form-control", @placeholder = "Senha", @style = "width:400px;"  })
                        </div>

                        <div class="col-md-4"></div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Login" class="btn btn-default" />
                            </div>

                        </div>

                    </fieldset>
                </form>
            </div>

        </div>

    </div>

}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}